<form action="/users/register" method="POST">
  <h2 class="text-center">Create Account</h2>
  <% include ./partials/messages %>
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <div class="form-group">
    <input id="email" type="text" class="form-control" placeholder="Email" required="required" name="email" value="<%= typeof email != 'undefined' ? email : '' %>">
  </div>
  <div class="form-group">
    <input id="password" type="password" class="form-control" placeholder="Password" required="required" name="password" value="<%= typeof password != 'undefined' ? password : '' %>">
  </div>
  <div class="form-group">
    <input id="password2" type="password" class="form-control" placeholder="Password confirmation" required="required" name="password2" value="<%= typeof password2 != 'undefined' ? password2 : '' %>">
  </div>
  <div class="form-group">
      <button type="submit" class="btn btn-primary btn-block">Create</button>
  </div>
</form>
<p class="text-center"><a href="http://localhost:5000/users/login">Existing user log in</a></p>
