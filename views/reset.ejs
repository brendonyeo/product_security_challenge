<form action="/users/reset/<%= resetToken %>" method="POST">
  <h2 class="text-center">Reset Password</h2>
  <% include ./partials/messages %>
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <div class="form-group">
    <input id="password" type="password" class="form-control" placeholder="Password" required="required" name="password" value="<%= typeof password != 'undefined' ? password : '' %>">
  </div>
  <div class="form-group">
    <input id="password2" type="password" class="form-control" placeholder="Password confirmation" required="required" name="password2" value="<%= typeof password2 != 'undefined' ? password2 : '' %>">
  </div>
  <div class="form-group">
      <button type="submit" class="btn btn-primary btn-block">Reset</button>
  </div>
</form>
